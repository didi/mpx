{
  "transform": {
    "^.+\\.(js|jsx)?$": "babel-jest"
  },
  "moduleNameMapper": {
    "\\.(css|styl)$": "identity-obj-proxy"
  },
  "testEnvironment": "jsdom",
  "testMatch": [
    "**/packages/**/?(*.)+(spec|test).[jt]s?(x)"
  ],
  "testPathIgnorePatterns": ["dist", "node_modules"],
  "projects": [
    "<rootDir>/packages/*/jest.config.json"
  ],
  "testTimeout": 10000
}
