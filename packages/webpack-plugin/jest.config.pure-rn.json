{
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
  },
  "moduleNameMapper": {
    "\\.(css|styl)$": "identity-obj-proxy"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/test/setup.pure-rn.js"
  ],
  "testMatch": [
    "<rootDir>/lib/runtime/components/react/**/*.pure.test.(js|jsx|ts|tsx)"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/"
  ],
  "collectCoverageFrom": [
    "lib/runtime/components/react/**/*.{js,jsx,ts,tsx}",
    "!lib/runtime/components/react/**/__tests__/**",
    "!lib/runtime/components/react/**/*.test.{js,jsx,ts,tsx}",
    "!lib/runtime/components/react/**/dist/**"
  ]
}
