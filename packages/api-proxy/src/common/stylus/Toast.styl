
.__mpx_toast__
  display none
  &.show
    display block
  .__mpx_mask__
    position fixed
    z-index 1000
    top 0
    right 0
    left 0
    bottom 0
    display none
    &.show
      display block
  .__mpx_toast_box__
    position fixed
    top 50%
    left 50%
    z-index 2000
    box-sizing border-box
    display flex
    flex-direction column
    justify-content center
    min-width 100px
    max-width 130px
    overflow hidden
    text-align center
    line-height 1.6
    color #fff
    word-break break-all
    padding 15px 6px
    border-radius 5px
    background rgba(20, 20, 20, 0.7)
    transform translate(-50%, -50%)
    .__mpx_toast_icon__
      width 40px
      height 40px
      background-size 100%
      background-color transparent
      background-repeat no-repeat
      background-position-y center
      margin 6px auto
      &.hide
        display none
        height 0
        margin 0
      &.success
        background-image url("data:image/svg+xml;base64,")

    .__mpx_toast_title__
      font-size 12px
      margin 0
